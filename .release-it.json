{
    "git": {
        "requireBranch": "master"
    },
    "github": {
        "release": true,
        "releaseName": "v${version}"
    },
    "npm": {
        "publish": true
    },
    "hooks": {
        "before:init": ["npm run lint", "npm run test"],
        "after:bump": ["npm run changelog"]
    }
}
